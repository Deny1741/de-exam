<%
	const cfg = { ...require("./data.json"), ...arguments?.[0] }
	const {
    extraClasses,
		extraAttrs,
		id,
		disabled,
		icon
	} = cfg
%>

<%
const classes = `lang-switcher ${extraClasses.join(" ")}`.trim()
const disabledAttr = disabled ? "disabled" : "";
const attrs = `${disabledAttr} ${extraAttrs.join(" ")}`;

%>


<div class="<%- classes %>">
	<svg class="lang-switcher__icon i-icon">
		<use href="#icon-<%- icon %>"></use>
	</svg>
	<select name="name" id="<%- id %>>" <%- attrs %>>
		<option value="ru">RU</option>
		<option value="eng">ENG</option>
	</select>
</div>
